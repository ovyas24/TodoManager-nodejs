<%- include('header.ejs') -%>
    <div class="box" id="heading">
        <h1><%= listTittle %></h1>
    </div>
    <div class="box">
        <% toDoList.forEach((item)=>{%>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>" id="" onchange="this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTittle %>"></input>
            </form>
        <%})%>
        <form action="/" method="post" class="item">
            <input type="text" name="item" placeholder="New Input" autocomplete="off">
            <button type="submit" name='list' value=<%= listTittle %>>+</button>
        </form>
    </div>
<%- include('footer.ejs') -%>